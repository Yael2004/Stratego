<UserControl x:Class="StrategoApp.View.SignUp"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:StrategoApp.View"
             xmlns:res="clr-namespace:StrategoApp.Properties"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Viewbox Stretch="Fill">
        <Grid Height="440" Width="800" Background="{StaticResource InitialBackground}">
            <Canvas>
                <Label Content="{x:Static res:Resources.Stratego_Label}" 
                       FontSize="70" 
                       FontWeight="Bold"
                       Foreground="{StaticResource IntenseRed}"
                       FontFamily="{StaticResource AugustaFont}"
                       Canvas.Left="275" Canvas.Top="46" 
                       HorizontalAlignment="Center" VerticalAlignment="Top"/>

                <TextBox Name="WatermarkTextBoxPassword"
                       Style="{StaticResource InputBoxStyle}"
                       Text="{x:Static res:Resources.UserPassword_Label}"
                       Panel.ZIndex="1"
                       Foreground="{StaticResource IntenseRed}"
                       IsHitTestVisible="False"
                       Background="Transparent"
                       VerticalAlignment="Top"
                       HorizontalAlignment="Center"
                       Width="280" Height="34"
                       Canvas.Left="260" Canvas.Top="246"/>

                <TextBox Name="UsernameTextBox" Style="{StaticResource InputBoxStyle}" Text="{x:Static res:Resources.UserName_Label}"
                         Canvas.Left="260" Canvas.Top="162" 
                         Width="280" Height="33" 
                         HorizontalAlignment="Center" VerticalAlignment="Top"
                         GotFocus="UsernameTextBox_GotFocus" LostFocus="UsernameTextBox_LostFocus"/>

                <TextBox Name="MailTextBox" Style="{StaticResource InputBoxStyle}" Text="{x:Static res:Resources.UserMail_Label}"
                         Canvas.Left="260" Canvas.Top="204" 
                         Width="280" Height="32" 
                         HorizontalAlignment="Center" VerticalAlignment="Center"
                         GotFocus="MailTextBox_GotFocus" LostFocus="MailTextBox_LostFocus"/>

                <PasswordBox Name="PasswordTextBox" Style="{StaticResource InputBoxStyle}"
                             Canvas.Left="260" Canvas.Top="246" 
                             Width="280" Height="34" 
                             HorizontalAlignment="Center" VerticalAlignment="Top"
                             GotFocus="PasswordTextBox_GotFocus"
                             LostFocus="PasswordTextBox_LostFocus"/>

                <Button Content="{x:Static res:Resources.SignUp_Button}" 
                        Style="{StaticResource ButtonStyle}"
                        Canvas.Left="217" Canvas.Top="311" 
                        Width="160" Height="40" 
                        HorizontalAlignment="Left" VerticalAlignment="Center"/>

                <Button Content="{x:Static res:Resources.Cancel_Button}"
                        Style="{StaticResource ButtonStyle}"
                        Canvas.Left="434" Canvas.Top="311" 
                        Width="140" Height="40" 
                        HorizontalAlignment="Left" 
                        VerticalAlignment="Center"/>

                <Label x:Name="Label_LogInMessage"
                       FontSize="15" 
                       FontWeight="Bold"
                       Foreground="{StaticResource IntenseRed}"
                       FontFamily="{StaticResource AugustaFont}"
                       Canvas.Left="334" Canvas.Top="258" 
                       HorizontalAlignment="Left" 
                       VerticalAlignment="Center"/>
            </Canvas>
        </Grid>
    </Viewbox>
</UserControl>
