<UserControl x:Class="StrategoApp.View.Game"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:StrategoApp.View"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="120" />
            <ColumnDefinition Width="5*" />
            <ColumnDefinition Width="120" />
            <ColumnDefinition Width="1*" />
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <StackPanel Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Ellipse Width="50" Height="50" Fill="Black" />
            <TextBlock Text="Saay" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center" />
        </StackPanel>

        <Border Grid.Column="1" Background="LightGray" Width="100" Margin="10,0">
            <TextBlock Text="Información de personajes" 
                       RenderTransformOrigin="0.5,0.5" 
                       FontWeight="Bold"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center">
                <TextBlock.RenderTransform>
                    <RotateTransform Angle="-90"/>
                </TextBlock.RenderTransform>
            </TextBlock>
        </Border>

        <Border Grid.Column="2" BorderBrush="Black" BorderThickness="2" Margin="10">
            <Grid>
                <Image Source="pack://application:,,,/StrategoApp;component/Assets/Images/Board.png" Stretch="Fill" />

                <UniformGrid x:Name="BoardGrid" Rows="10" Columns="10"/>
            </Grid>
        </Border>


        <Border Grid.Column="3" Background="LightGray" Width="100" Margin="10,0">
            <TextBlock Text="Información de personajes" 
                       RenderTransformOrigin="0.5,0.5" 
                       FontWeight="Bold"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center">
                <TextBlock.RenderTransform>
                    <RotateTransform Angle="90"/>
                </TextBlock.RenderTransform>
            </TextBlock>
        </Border>

        <StackPanel Grid.Column="4" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Ellipse Width="50" Height="50" Fill="Black" />
            <TextBlock Text="McGabo" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center" />
        </StackPanel>
    </Grid>
</UserControl>
